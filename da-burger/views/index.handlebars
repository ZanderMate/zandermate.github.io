<div class="jumbotron">
  <h1 class="text-center">Eat-Da-Burger!</h1>
  <img src="burger.jfif" alt="Burger" class="mx-auto d-block" height="200px">
</div>

<div class="container">
  <div class="row">
    <div class="col-md-6">
      <ul>
        {{#each burger}}
        {{#unless devoured}}
        {{> burger/burger-block devoured=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-md-6">
      <ul>
        {{#each burger}}
        {{#if devoured}}
        {{> burger/burger-block devoured=}}
      </ul>
    </div>
  </div>
</div>

<form class="create-form text-center">
  <textarea name="burger_name" class="mx-auto d-block" cols="50" rows="5"></textarea>
  <button class="btn btn-primary submit-button" type="submit">Submit</button>
</form>